{
    "files.autoSave": "onWindowChange",
    "editor.formatOnSave": true,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.detectIndentation": false
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.detectIndentation": false,
        "editor.wordWrap": "wordWrapColumn",
        "editor.rulers": [120],
        "editor.wordWrapColumn": 120
    }
}